{
  "type": "function",
  "function": {
    "name": "home_auth",
    "description": "Authenticates the user with customer_id and password before allowing any smart home control. Must be called first before any device operations.",
    "parameters": {
      "type": "object",
      "properties": {
        "customer_id": {
          "description": "The customer identifier for authentication",
          "type": "string"
        },
        "password": {
          "description": "The customer password for authentication",
          "type": "string"
        }
      },
      "required": [
        "customer_id",
        "password"
      ]
    }
  },
  "server": {
    "url": "https://healthy-alley-production.up.railway.app/auth",
    "method": "POST"
  }
}
